<%= turbo_frame_tag("#{dom_id(reservation)}_row") do %>
  <div class='grid grid-cols-1 md:grid-cols-3 shadow-lg rounded-lg hover:bg-yellow-600/20 gap-4'>
    <div class="font-bold text-lg text-gray-900">
      <%= link_to book_path(reservation.book), 'data-turbo-frame': '_top' do %>
        <span><%= reservation.book.title %></span>
      <% end %>
    </div>
    <div class="text-lg text-gray-900 flex items-center">
      <%= image_tag("down-arrow.svg", class: 'mr-1 w-5') %>
      Reserved on <%= reservation.created_at.to_date %>
    </div>
    <div class="text-lg text-gray-900 flex items-center">
      <% if reservation.returned_on %>
        <%= image_tag("up-arrow.svg", class: 'mr-1 w-5') %>
        <span>Returned on <%= reservation.returned_on %></span>
      <% else %>
        <%= button_to('Return Book', reservation_path(reservation), method: :put,
        class: 'px-8 py-1 rounded-lg bg-yellow-600 hover:bg-yellow-700 text-white', 'data-turbo-frame': '_self') %>
      <% end %>
    </div>
  </div>
<% end %>
