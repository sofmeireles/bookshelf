<%= turbo_frame_tag("active_reservation_badge") do %>
<div class="flex flex-col items-center bg-gray-100 shadow px-6 py-4 ml-16 mt-10 rounded-lg">
  <span class="font-bold text-xl text-gray-900">You are reading:</span>
  <div class="flex flex-col bg-white py-6 px-8 my-4">
    <div class="text-lg text-gray-900">
        <%= link_to book_path(@active_reservation.book), 'data-turbo-frame': '_top' do %>
          <span class="font-semibold hover:underline"><%= @active_reservation.book.title %></span>
        <% end %>
    </div>
    <div class="px-6 py-4 text-lg text-gray-900 flex items-center">
      <%= image_tag("down-arrow.svg", class: 'mr-1 w-5') %>
      Reserved on <%= @active_reservation.created_at.to_date %>
    </div>
    <div class="px-6 py-4 text-lg text-gray-900 flex items-center">
      <%= button_to('Return Book', reservation_path(@active_reservation), method: :patch,
          class: 'px-8 py-1 rounded-lg bg-yellow-600 hover:bg-yellow-700 text-white') %>
    </div>
  </div>
</div>
<% end %>