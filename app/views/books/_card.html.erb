  <div class='flex bg-white shadow-lg rounded-lg my-4 overflow-hidden'>
    <% if book.cover_url.present? %>
      <div class="flex-none w-48 h-64 relative">
        <%= image_tag(book.cover_url, alt: book.title, class: "absolute inset-0 w-full h-full object-cover object-center") %>
      </div>
    <% end %>

    <div class="flex flex-auto flex-row justify-between p-6">
      <div>
          <div class="flex flex-wrap">
              <%= link_to book_path(book), 'data-turbo-frame': '_top' do %>
                  <h1 class='flex-auto text-xl font-bold mb-3 hover:underline cursor-pointer'><%= book.title %></h1>
              <% end %>
          </div>
          <p class="mt-4 text-gray-700 max-w-xl">
          <%= truncate(book.description, length: 370) %>
          </p>
      </div>
      <div class="m-auto mx-4 text-center flex gap-4 flex-col">
          <%= link_to('Edit', edit_book_path(book), 'data-turbo-frame': '_top', class: 'inline-block rounded-lg px-8 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-bold') %>
          <%= button_to('Destroy', book_path(book), method: :delete, class: 'inline-block rounded-lg px-8 py-3 bg-red-700 hover:bg-red-800 text-white font-bold') %>
      </div>

    </div>
  </div>
